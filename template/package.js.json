{
  "name": "{{ name }}",
  "author": "{{ author }}",
  "version": "0.1.0",
  "scripts": {
    "start": "npm run css:watch & npm run rollup & httpster -p 3000",
    {{#if tests}}
    "test": "npm run lint & watchify -t babelify src/test.js -o dist/test.js & testem",
    {{/if}}
    "rollup": "rollup src/main.js --output dist/app.js --format iife",
    "lint": "eslint src",
    "build": "NODE_ENV=production npm run rollup && npm run css:dist && hashly ./dist ./dist && recalper index.html dist/manifest.json dist/index.html path hashedPath dist",
    "css": "postcss --use autoprefixer src/main.css > dist/build.css",
    "css:dist": "postcss --use autoprefixer --use cssnano src/main.css > dist/build.css",
    "css:watch": "nodemon --watch src -e css --exec 'npm run css'"
  },
  "devDependencies": {
    {{#if tests}}
    "chai": "^3.5.0",
    "testem": "^1.6.0",
    {{/if}}
    "autoprefixer": "^6.3.6",
    "cssnano": "^3.5.2",
    "eslint": "^2.7.0",
    "eslint-config-standard": "^5.1.0",
    "eslint-plugin-promise": "^1.1.0",
    "eslint-plugin-standard": "^1.3.2",
    "hashly": "^0.4.9",
    "httpster": "^1.0.3",
    "nodemon": "^1.9.1",
    "postcss-cli": "^2.5.1",
    "recalper": "^0.1.1",
    "rollup": "^0.26.1",
    "vue": "^1.0.21"
  }
}
